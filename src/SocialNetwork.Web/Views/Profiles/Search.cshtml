@model SocialNetwork.Web.ViewModels.UserProfilesSearchViewModel

@{
    Layout = "../_Layout";
    ViewBag.Title = "Find Profiles";
}

<div class="search-field">
    <form asp-controller="Profiles" asp-action="Search" method="get">
        <input type="text" name="query" />
    </form>
</div>


<div class="profiles-container">
    @foreach (var profile in Model.Profiles)
    {
        <div class="card user-card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@profile.FirstName @profile.LastName</h5>
                <h6 class="card-subtitle mb-2 text-muted">City: @profile.City, Age: @profile.Age</h6>
                <p class="card-text">@profile.Interests</p>
                <a class="card-link" asp-controller="Profiles" asp-action="Profile" asp-route-userId="@profile.UserId">Go to profile</a>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link @(Model.Page == 0 ? "disabled" : "")" href="@Url.Action("Search", new { query = Model.Query, page = Model.Page - 1, pageSize = Model.PageSize})">
                Previous
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="@Url.Action("Search", new { query = Model.Query, page = Model.Page + 1, pageSize = Model.PageSize})">Next</a>
        </li>
    </ul>
</nav>