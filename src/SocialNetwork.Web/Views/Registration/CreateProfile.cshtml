@model SocialNetwork.Web.ViewModels.CreateProfileViewModel

@{
    Layout = "../_Layout";
    ViewBag.Title = "SocialNetwork - Create Profile";
}

<div>
    <h1>Create profile</h1>
    <div>
        <p>Hello, @Model.UserName!</p>
        
        <form asp-controller="Registration" asp-action="CreateProfile" method="post">
            <div>
                <label asp-for="FirstName">FirstName</label>
                <input type="text" asp-for="FirstName"/>
            </div>
            <div>
                <label asp-for="LastName">LastName</label>
                <input type="text" asp-for="LastName"/>
            </div>
            <div>
                <label asp-for="Age">Age</label>
                <input type="number" asp-for="Age"/>
            </div>
            <div>
                <label asp-for="City">City</label>
                <input type="text" asp-for="City"/>
            </div>
            <div>
                <label asp-for="Interests">Interests</label>
                <input type="text" asp-for="Interests"/>
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</div>