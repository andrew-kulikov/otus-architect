@model SocialNetwork.Web.ViewModels.RegistrationViewModel

@{
    Layout = "../_Layout";
    ViewBag.Title = "SocialNetwork - Registration";
}

<div>
    <h1>Registration</h1>

    <form asp-controller="Registration" asp-action="Register" method="post">
        <div>
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email"/>
        </div>
        
        <div>
            <label asp-for="Username">Username</label>
            <input type="text" asp-for="Username"/>
        </div>
        
        <div>
            <label asp-for="Password">Password</label>
            <input type="text" asp-for="Password"/>
        </div>
        
        <div>
            <label asp-for="ConfirmPassword">ConfirmPassword</label>
            <input type="text" asp-for="ConfirmPassword"/>
        </div>
     
        <button type="submit">Submit</button>
    </form>
</div>